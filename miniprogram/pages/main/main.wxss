/**index.wxss**/
.container_{
    position: relative;
}
.container_account{
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}
.user_information {
    width: 80%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.text {
    font-size: large;
    font-weight: bold;
    font-family: "Microsoft YaHei UI", sans-serif;
}

.text_login{
  width: 30%;
}

.container_space {
    margin-bottom: 20px;
}

.account_input {
    flex: 1;
}

