.container_ {
    position: relative;
    background-color: #f5f6f7;
}

.MapView {
    width: 100%;
    height: 100%;
}
.overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 0;
}
.map {
    background-color: black;
    width: 100%; /* 设置宽度为100%，这样地图就会占满整个 .map 视图 */
    height: 30%; /* 设置高度为100%，这样地图就会占满整个 .map 视图 */
    padding: 2.5%;
    position: absolute; /* 设置定位方式为绝对定位 */
    top: 0; /* 设置元素的顶部边缘与其包含块的顶部边缘之间的距离为0 */
}

.code_scan {
    position: absolute; /* 设置定位方式为绝对定位 */
    bottom: 6.5%; /* 设置元素的底部边缘与其包含块的底部边缘之间的距离为0 */
    width: 100%; /* 设置宽度为100%，这样元素就会占满整个 .container 视图 */
    background-color: #ffffff; /* 设置背景颜色 */
    padding: 10px; /* 设置内边距 */
    text-align: center; /* 设置文本对齐方式 */
    box-shadow: 0px -2px 10px rgba(0, 0, 0, 0.10); /* 设置阴影 */
    border-radius: 13px 13px 0 0; /* 设置圆角的大小 */
    z-index: 999;
}

.code_scan_title {
    position: absolute; /* 设置定位方式为绝对定位 */
    left: 50%; /* 设置元素的左边缘与其包含块的左边缘��间的距离为50% */
    transform: translate(-50%); /* 使用 transform 属性将元素向左和向上移动自身宽度和高度的50%，使其居中 */
    display: flex; /* 设置元素为弹性盒子 */
    text-align: center;
    justify-content: center; /* 设置弹性容器的子元素在主轴上居中 */
    align-items: center; /* 设置元素的垂直对齐方式 */
    width: 90% !important; /* 设置元素的宽度 */
    background: linear-gradient(to right, #ffc400, rgb(247, 255, 0));/* 设置背景颜色为黄色 */
    border-radius: 40px; /* 设置圆角的大小 */
    z-index: 999;
}
.reset_button {
    position: absolute;
    background-color: transparent; /* 添加这一行 */
    top: 2%;
    right: 2%;
    width: 2%;
    height: 18%;
    left: 92%;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
}